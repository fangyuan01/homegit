<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/theme" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="学生作业提交系统"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/main_layout_menu"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/main_button_homework"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xml_button_menu"
                android:onClick="onClick" >

                <TextView
                    android:id="@+id/main_textview_homework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:text="作业提交"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="20dp"
                    android:layout_above="@id/main_textview_homework"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:contentDescription="img"
                    android:scaleType="fitXY"
                    android:src="@drawable/d_homework" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/main_button_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xml_button_menu"
                android:onClick="onClick" >

                <TextView
                    android:id="@+id/main_textview_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:text="消息公告"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="20dp"
                    android:layout_above="@id/main_textview_message"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:contentDescription="img"
                    android:scaleType="fitXY"
                    android:src="@drawable/d_message" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/main_button_person"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xml_button_menu"
                android:onClick="onClick" >

                <TextView
                    android:id="@+id/main_textview_persion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:text="个人信息"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="20dp"
                    android:layout_above="@id/main_textview_persion"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:contentDescription="img"
                    android:scaleType="fitXY"
                    android:src="@drawable/d_person" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/main_button_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xml_button_menu"
                android:onClick="onClick" >

                <TextView
                    android:id="@+id/main_textview_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:text="更多"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="20dp"
                    android:layout_above="@id/main_textview_more"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="2dp"
                    android:contentDescription="img"
                    android:scaleType="centerInside"
                    android:src="@drawable/d_more" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_layout_pagearea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/main_layout_menu"
            android:layout_alignParentTop="true" >
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
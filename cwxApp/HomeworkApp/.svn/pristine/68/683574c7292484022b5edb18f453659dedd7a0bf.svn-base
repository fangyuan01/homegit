<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/xml_button_white"
    android:orientation="vertical" >

    <View
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/item_classlist_imageview_msgimg"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:background="@drawable/xml_img_background"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/item_classlist_textview_msgname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/item_classlist_imageview_msgimg"
        android:text="标题(发送者)"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_classlist_textview_msgname"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/item_classlist_imageview_msgimg"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="消息体"
        android:textColor="@color/black_white_dark"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_classlist_imageview_msgimg"
        android:layout_marginRight="5dp"
        android:text="日期时间"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black" />

</RelativeLayout>
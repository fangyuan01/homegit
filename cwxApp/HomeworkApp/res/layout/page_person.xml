<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/person_imageview_personphoto"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/xml_img_background"
            android:scaleType="fitXY"
            android:src="@drawable/imgicon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/person_textview_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/person_textview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/person_textview_number"
                android:layout_marginTop="10dp"
                android:text="姓名:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/person_textview_name"
                android:layout_alignTop="@id/person_textview_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/person_textview_name"
                android:scaleType="centerInside"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/person_textview_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/person_textview_name"
                android:layout_marginTop="10dp"
                android:text="权限:"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/person_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="性别:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/person_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="年龄:"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/person_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/xml_button_menu"
        android:gravity="center"
        android:padding="8dp"
        android:text="修改信息"
        android:textColor="@color/white" />

</LinearLayout>
<resources>

    <style name="AppBaseTheme" parent="android:Theme.Black.NoTitleBar"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@drawable/right_to_left_in</item>
        <item name="android:activityOpenExitAnimation">@drawable/right_to_left_out</item>
        <item name="android:activityCloseEnterAnimation">@drawable/back_left_to_right_in</item>
        <item name="android:activityCloseExitAnimation">@drawable/back_left_to_right_out</item>
    </style>

    <style name="DialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@drawable/anim_totop</item>
        <item name="android:windowExitAnimation">@drawable/anim_tobottom</item>
    </style>

    <style name="mDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/invisable</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>